{
  "experiment_name": "texting_experiment",
  "run_name": "texting_mr_test",
  "dataset": {
      "name": "20ng",
      "max_len":500,
      "tvt_split": [0.8, 0.1, 0.1],
      "shuffle": true,
      "random_seed": 42,
      "preprocess": {
        "remove_stopwords": false,
        "remove_rare_words": 5
      },
      "gnn_encoding": {
          "window_size": 3,
          "embedding_dim": 300
      }
  },
  "model_config": {
      "model_type": "texting",
      "common_params": {
        "epochs": 15,
        "batch_size": 32,
        "seed": 42,
        "device": "cuda",
        "log_batch_every_n": 64

        
      },
      "model_specific_params": {
        "hidden_dim": 96,
        "gru_steps": 2,
        "dropout": 0.5,
        "lr": 0.005,
        "weight_decay": 0,
        "patience": 10
      }
    }
  }
