{
  "experiment_name": "baseline_comparison",
  "run_name": "texting_20ng_baseline",
  "dataset": {
    "name": "20ng",
    "tvt_split": [
      0.8,
      0.1,
      0.1
    ],
    "shuffle": true,
    "random_seed": 42,
    "preprocess": {
      "remove_stopwords": true,
      "remove_rare_words": 5
    },
    "gnn_encoding": {
      "window_size": 2,
      "embedding_dim": 300
    },
    "max_len": 600
  },
  "model_config": {
    "model_type": "texting",
    "common_params": {
      "epochs": 100,
      "batch_size": 256,
      "seed": 42,
      "device": "cuda",
      "log_batch_every_n": 50
    },
    "model_specific_params": {
      "hidden_dim": 256,
      "gru_steps": 3,
      "dropout": 0.5,
      "lr": 0.005,
      "weight_decay": 0,
      "patience": 15
    }
  }
}