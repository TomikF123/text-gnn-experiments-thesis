{
  "experiment_name": "hyperparams_textgcn",
  "run_name": "textgcn_20ng_hdim200",
  "dataset": {
    "name": "20ng",
    "tvt_split": [
      0.8,
      0.1,
      0.1
    ],
    "shuffle": true,
    "random_seed": 42,
    "preprocess": {
      "remove_stopwords": true,
      "remove_rare_words": 5
    },
    "gnn_encoding": {
      "x_type": "identity",
      "window_size": 20
    }
  },
  "model_config": {
    "model_type": "text_gcn",
    "common_params": {
      "epochs": 200,
      "batch_size": 32,
      "seed": 42,
      "device": "cuda"
    },
    "model_specific_params": {
      "hidden_dim": 200,
      "lr": 0.02,
      "dropout": 0.5,
      "patience": 15,
      "use_edge_weights": true
    }
  }
}