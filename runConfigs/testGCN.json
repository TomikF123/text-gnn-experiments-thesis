{
  "experiment_name": "test",
  "run_name": "test_run",
  "dataset": {
      "name": "mr",
      "tvt_split": [0.7, 0, 0.3],
      "shuffle": true,
      "random_seed": 123,
      "preprocess": {
        "remove_stopwords": false,
        "remove_rare_words": 0
      },
      "gnn_encoding": {
          "preset":"None",
          "window_size": 2,
          "x_type":"identity"
      }
      
  },
  
   "model_config":{
      "model_type":"text_gcn",
      "common_params": {
        "epochs": 15,
        "batch_size": 32,
        "seed": 123
      },
      "model_specific_params": {
        "hidden_dims": [128, 128,128],
        "dropout": 0.5,
        "lr": 0.001,
        "act": "relu",
        "pred_type": "softmax",
        "optimizer": "adam",
        "use_bn": true
      }
  
    }
  }
  