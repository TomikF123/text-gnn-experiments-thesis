{
  "experiment_name": "TextClassification",
  "run_name": "textgcn_win20",
  "model_type": "TextGCN",
  "log_model": true,
  "save_conf_as_artifact": true,

  "dataset": {
    "name": "20NG",
    "tvt_split": [0.8, 0.1, 0.1],
    "shuffle": true,
    "random_seed": 42,
    "preprocessing": {
      "remove_stopwords": true
    }
  },

  "common_params": {
    "epochs": 100,
    "batch_size": 64,
    "lr": 0.001,
    "seed": 42
  },

  "model_specific": {
    "hidden_dim": 128,
    "dropout": 0.5,
    "window_size": 20,
    "normalize_adjacency": true
  }
}
